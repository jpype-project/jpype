<project default="test" name="JPype - Native">

	<property name="src" location="harness"/>
	<property name="build" location="classes"/>

	<target name="test" depends="compile">
	</target>

	<target name="compile">
		<mkdir dir="${build}"/>
		<javac destdir="${build}"
			srcdir="${src}"
		/>
		<rmic base="${build}"
			classname="jpype.rmi.ServerImpl"
		/>
	</target>

	<target name="clean">
		<delete dir="${build}"/>
	</target>

</project>
